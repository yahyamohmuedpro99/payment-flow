# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_DATABASE=payment_flow
DB_SYNCHRONIZE=false
DB_LOGGING=true

# JWT Authentication
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=3600

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3000/api/v1/payments/success
STRIPE_CANCEL_URL=http://localhost:3000/api/v1/payments/cancel

# Application URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# Wallet Configuration
DEFAULT_CURRENCY=USD
MINIMUM_WITHDRAWAL=1.00
MAXIMUM_DEPOSIT=10000.00

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILES=14d
